<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_8sdp"
    android:layout_marginTop="@dimen/_8sdp"
    android:layout_marginStart="@dimen/_4sdp"
    android:layout_marginEnd="@dimen/_4sdp"
    android:layout_marginBottom="@dimen/_15sdp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_2sdp"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Requisition Token : "
            android:fontFamily="@font/poppins_semibold"
            android:textSize="@dimen/_10sdp"
            android:layout_gravity="center"
            android:layout_weight=".5"
            android:textColor="@color/elite_red"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:layout_marginStart="@dimen/_4sdp"
            android:id="@+id/requisition_token_in_req_stat_list"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_bold"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingStart="@dimen/_2sdp"
            android:paddingEnd="@dimen/_2sdp"
            android:text=""/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_2sdp"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Requisition Status : "
            android:textSize="@dimen/_10sdp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_gravity="center"
            android:layout_weight=".5"
            android:textColor="@color/elite_red"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight=".5"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_1sdp">

            <androidx.cardview.widget.CardView
                android:id="@+id/requisition_status_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_6sdp"
                app:cardBackgroundColor="@android:color/holo_red_dark">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/requisition_status_in_req_stat_list"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:paddingTop="@dimen/_1sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:paddingStart="@dimen/_4sdp"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="@font/open_sans_bold"
                    android:paddingEnd="@dimen/_4sdp"
                    android:text=""/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_2sdp"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Request Date : "
            android:fontFamily="@font/poppins_semibold"
            android:textSize="@dimen/_10sdp"
            android:layout_gravity="center"
            android:layout_weight=".5"
            android:textColor="@color/elite_red"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:layout_marginStart="@dimen/_4sdp"
            android:id="@+id/request_date_in_req_stat_list"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_bold"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingStart="@dimen/_2sdp"
            android:paddingEnd="@dimen/_2sdp"
            android:text=""/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FROM (Location) : "
        android:textSize="@dimen/_10sdp"
        android:fontFamily="@font/poppins_semibold"
        android:layout_margin="@dimen/_2sdp"
        android:layout_gravity="center"
        android:textColor="@color/elite_red"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_2sdp"
        android:id="@+id/from_location_all_area_in_req_stat_list"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:paddingStart="@dimen/_2sdp"
        android:paddingEnd="@dimen/_2sdp"
        android:textSize="@dimen/_9sdp"
        android:fontFamily="@font/poppins_bold"
        android:text=""/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_2sdp">

        <TextView
            android:id="@+id/at_extra_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/default_text_color"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingStart="@dimen/_2sdp"
            android:paddingEnd="@dimen/_2sdp"
            android:textSize="@dimen/_9sdp"
            android:fontFamily="@font/poppins_semibold"
            android:text="at"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/at_extra_text"
            android:layout_alignParentEnd="true"
            android:id="@+id/from_location_date_in_req_stat_list"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingStart="@dimen/_2sdp"
            android:paddingEnd="@dimen/_2sdp"
            android:textSize="@dimen/_9sdp"
            android:fontFamily="@font/poppins_bold"
            android:text=""/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TO (Location) : "
        android:textSize="@dimen/_10sdp"
        android:fontFamily="@font/poppins_semibold"
        android:layout_margin="@dimen/_2sdp"
        android:layout_gravity="center"
        android:textColor="@color/elite_red"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_2sdp"
        android:id="@+id/to_location_all_area_in_req_stat_list"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:paddingStart="@dimen/_2sdp"
        android:paddingEnd="@dimen/_2sdp"
        android:textSize="@dimen/_9sdp"
        android:fontFamily="@font/poppins_bold"
        android:text=""/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_2sdp">

        <TextView
            android:id="@+id/at_extra_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/default_text_color"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingStart="@dimen/_2sdp"
            android:paddingEnd="@dimen/_2sdp"
            android:textSize="@dimen/_9sdp"
            android:fontFamily="@font/poppins_semibold"
            android:text="at"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/at_extra_text_1"
            android:layout_alignParentEnd="true"
            android:id="@+id/to_location_date_in_req_stat_list"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingStart="@dimen/_2sdp"
            android:paddingEnd="@dimen/_2sdp"
            android:textSize="@dimen/_9sdp"
            android:fontFamily="@font/poppins_bold"
            android:text=""/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_2sdp"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Vehicle Type :"
            android:textSize="@dimen/_10sdp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_weight=".5"
            android:layout_gravity="center"
            android:textColor="@color/elite_red"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:layout_marginStart="@dimen/_4sdp"
            android:id="@+id/requisition_fleet_type_in_req_stat_list"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:fontFamily="@font/poppins_bold"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingStart="@dimen/_2sdp"
            android:paddingEnd="@dimen/_2sdp"
            android:text=""/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_2sdp"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vehicle Quantity:"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/poppins_semibold"
                android:layout_gravity="center"
                android:textColor="@color/elite_red"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/vehicle_qty_in_req_stat_list"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:paddingStart="@dimen/_2sdp"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/poppins_bold"
                android:paddingEnd="@dimen/_2sdp"
                android:text=""/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Travelers Quantity:"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/poppins_semibold"
                android:layout_gravity="center"
                android:textColor="@color/elite_red"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/travelers_qty_in_req_stat_list"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:paddingStart="@dimen/_2sdp"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/poppins_bold"
                android:paddingEnd="@dimen/_2sdp"
                android:text=""/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>