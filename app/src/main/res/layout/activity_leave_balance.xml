<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".leave.leave_balance.LeaveBalance">

    <RelativeLayout
        android:id="@+id/topLay_leave_balance"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_66sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/design_2"
            android:orientation="vertical"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_62sdp"
            android:background="@drawable/design"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:fontFamily="@font/russo_one"
                android:gravity="center"
                android:text="Leave Balance"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />
            
        </LinearLayout>
        
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView21_leave_balance"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_below="@+id/topLay_leave_balance"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/report_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:visibility="visible"
                android:layout_marginBottom="@dimen/_8sdp"
                android:background="@color/white"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardElevation="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_14sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:textStyle="bold"
                        android:fontFamily="@font/open_sans_bold"
                        android:textColor="@color/elite_red"
                        android:text="Leave Balance"
                        android:gravity="center"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/from_to_year"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Year:"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/_11sdp"
                        android:gravity="center"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_marginBottom="@dimen/_4sdp"
                        tools:ignore="HardcodedText" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_2sdp"
                        android:background="@android:color/darker_gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1.2"
                        android:baselineAligned="false">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:hint="Name:"
                            android:layout_weight=".7"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_marginBottom="@dimen/_4sdp"
                            app:boxStrokeColor="@color/black"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="1dp"
                            app:boxCornerRadiusTopStart="@dimen/_4sdp"
                            app:boxCornerRadiusTopEnd="@dimen/_4sdp"
                            app:boxCornerRadiusBottomEnd="@dimen/_4sdp"
                            app:boxCornerRadiusBottomStart="@dimen/_4sdp"
                            app:boxBackgroundMode="filled"
                            android:clickable="false"
                            android:enabled="false"
                            app:boxBackgroundColor="@color/white"
                            app:hintTextColor="@color/default_text_color"
                            tools:ignore="HardcodedText">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/name_leave"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:clickable="false"
                                android:enabled="false"
                                android:textSize="@dimen/_9sdp"
                                android:text=""
                                android:fontFamily="@font/poppins_semibold"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:inputType="textMultiLine" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:hint="Joining Date:"
                            android:layout_weight=".5"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_marginEnd="@dimen/_4sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_marginBottom="@dimen/_4sdp"
                            app:boxStrokeColor="@color/black"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="1dp"
                            app:boxCornerRadiusTopStart="@dimen/_4sdp"
                            app:boxCornerRadiusTopEnd="@dimen/_4sdp"
                            app:boxCornerRadiusBottomEnd="@dimen/_4sdp"
                            app:boxCornerRadiusBottomStart="@dimen/_4sdp"
                            app:boxBackgroundMode="filled"
                            android:clickable="false"
                            android:enabled="false"
                            app:boxBackgroundColor="@color/white"
                            app:hintTextColor="@color/default_text_color"
                            tools:ignore="HardcodedText">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/joining_leave"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:clickable="false"
                                android:enabled="false"
                                android:textSize="@dimen/_9sdp"
                                android:fontFamily="@font/poppins_semibold"
                                android:text=""
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:inputType="textMultiLine"/>

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@android:color/darker_gray" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Calling Title:"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:layout_marginEnd="@dimen/_4sdp"
                        app:boxStrokeColor="@color/black"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="1dp"
                        app:boxCornerRadiusTopStart="@dimen/_4sdp"
                        app:boxCornerRadiusTopEnd="@dimen/_4sdp"
                        app:boxCornerRadiusBottomEnd="@dimen/_4sdp"
                        app:boxCornerRadiusBottomStart="@dimen/_4sdp"
                        app:boxBackgroundMode="filled"
                        android:clickable="false"
                        android:enabled="false"
                        app:boxBackgroundColor="@color/white"
                        app:hintTextColor="@color/default_text_color"
                        tools:ignore="HardcodedText">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/calling_title_leave"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:clickable="false"
                            android:enabled="false"
                            android:textSize="@dimen/_9sdp"
                            android:text=""
                            android:fontFamily="@font/poppins_semibold"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:inputType="textMultiLine"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@android:color/darker_gray" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@android:color/darker_gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_38sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:orientation="horizontal"
                        android:weightSum="1.2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textStyle="bold"
                            android:padding="@dimen/_2sdp"
                            android:textSize="@dimen/_7sdp"
                            android:gravity="center"
                            android:background="#ced6e0"
                            android:fontFamily="@font/poppins"
                            android:textColor="@color/black"
                            android:layout_weight=".25"
                            android:text="Leave Category"
                            tools:ignore="HardcodedText" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/black" />

                        <TextView
                            android:layout_width="0dp"
                            android:textSize="@dimen/_7sdp"
                            android:layout_height="match_parent"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:background="#ced6e0"
                            android:fontFamily="@font/poppins"
                            android:padding="@dimen/_2sdp"
                            android:textColor="@color/black"
                            android:layout_weight=".1"
                            android:text="Short Code"
                            tools:ignore="HardcodedText" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/black" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textStyle="bold"
                            android:textSize="@dimen/_7sdp"
                            android:gravity="center"
                            android:padding="@dimen/_2sdp"
                            android:background="#ced6e0"
                            android:fontFamily="@font/poppins"
                            android:textColor="@color/black"
                            android:layout_weight=".15"
                            android:text="Opening Quantity"
                            tools:ignore="HardcodedText" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/black" />

                        <TextView
                            android:layout_width="0dp"
                            android:textSize="@dimen/_7sdp"
                            android:layout_height="match_parent"
                            android:textStyle="bold"
                            android:background="#ced6e0"
                            android:gravity="center"
                            android:padding="@dimen/_2sdp"
                            android:fontFamily="@font/poppins"
                            android:textColor="@color/black"
                            android:layout_weight=".15"
                            android:text="Current Quantity"
                            tools:ignore="HardcodedText" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/black"/>

                        <TextView
                            android:layout_width="0dp"
                            android:textSize="@dimen/_7sdp"
                            android:layout_height="match_parent"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:background="#ced6e0"
                            android:padding="@dimen/_2sdp"
                            android:fontFamily="@font/poppins"
                            android:textColor="@color/black"
                            android:layout_weight=".13"
                            android:text="Consumed"
                            tools:ignore="HardcodedText" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/black" />

                        <TextView
                            android:layout_width="0dp"
                            android:textSize="@dimen/_7sdp"
                            android:layout_height="match_parent"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:background="#ced6e0"
                            android:padding="@dimen/_2sdp"
                            android:fontFamily="@font/poppins"
                            android:textColor="@color/black"
                            android:layout_weight=".14"
                            android:text="Transferred"
                            tools:ignore="HardcodedText" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/black" />

                        <TextView
                            android:layout_width="0dp"
                            android:textSize="@dimen/_7sdp"
                            android:layout_height="match_parent"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:background="#ced6e0"
                            android:padding="@dimen/_2sdp"
                            android:fontFamily="@font/poppins"
                            android:textColor="@color/black"
                            android:layout_weight=".13"
                            android:text="Cash Taken"
                            tools:ignore="HardcodedText" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/black"/>

                        <TextView
                            android:layout_width="0dp"
                            android:textSize="@dimen/_7sdp"
                            android:layout_height="match_parent"
                            android:textStyle="bold"
                            android:background="#ced6e0"
                            android:gravity="center"
                            android:padding="@dimen/_2sdp"
                            android:fontFamily="@font/poppins"
                            android:textColor="@color/black"
                            android:layout_weight=".15"
                            android:text="Balance Quantity"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/_4sdp">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/leave_list_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentTop="true" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/no_data_found_leave_balance_msg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No Data Found"
                        android:textSize="@dimen/_14sdp"
                        android:layout_margin="@dimen/_8sdp"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="center"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>