<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".check_in_out.fragments.CompletedCheckFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/month_selection_card_com_ci"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/_8sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        app:cardElevation="@dimen/_5sdp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_4sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_4sdp">

            <TextView
                android:id="@+id/month_selection_for_check_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FEBRUARY"
                android:fontFamily="@font/poppins"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                android:gravity="end"
                android:paddingTop="@dimen/_3sdp"
                android:paddingBottom="@dimen/_1sdp"

                android:layout_marginStart="@dimen/_4sdp"
                android:textColor="@color/elite_red"
                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/att_arrow_drop_down_image_ch_io"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_drop_down_24"
                app:tint="@color/elite_red"

                android:layout_marginEnd="@dimen/_6sdp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/completed_check_in_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_below="@+id/month_selection_card_com_ci"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>