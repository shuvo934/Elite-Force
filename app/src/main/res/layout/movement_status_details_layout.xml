<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="@dimen/_8sdp"
    app:cardElevation="@dimen/_3sdp"
    android:layout_marginStart="@dimen/_4sdp"
    android:layout_marginEnd="@dimen/_4sdp"
    android:layout_marginBottom="@dimen/_4sdp"
    android:layout_marginTop="@dimen/_4sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_4sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/movement_date_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TODAY"
            android:fontFamily="@font/poppins_bold"
            android:textSize="@dimen/_11sdp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_margin="@dimen/_4sdp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/_2sdp"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Movement Code : "
                android:fontFamily="@font/poppins_semibold"
                android:textSize="@dimen/_9sdp"
                android:layout_gravity="center"
                android:layout_weight=".45"
                android:textColor="@color/elite_red"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".35"
                android:layout_marginStart="@dimen/_4sdp"
                android:id="@+id/movement_code_in_movement_status"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"
                android:textSize="@dimen/_9sdp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:paddingStart="@dimen/_2sdp"
                android:paddingEnd="@dimen/_2sdp"
                android:text=""/>

            <androidx.cardview.widget.CardView
                android:id="@+id/map_of_movement_in_ms"
                android:layout_width="0dp"
                android:layout_height="@dimen/_25sdp"
                android:layout_weight=".2"
                app:cardCornerRadius="@dimen/_8sdp"
                android:layout_margin="@dimen/_4sdp"
                android:foreground="?attr/selectableItemBackground"
                app:cardElevation="@dimen/_2sdp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/map"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/_2sdp"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Movement Date : "
                android:fontFamily="@font/poppins_semibold"
                android:textSize="@dimen/_9sdp"
                android:layout_gravity="center"
                android:layout_weight=".45"
                android:textColor="@color/elite_red"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".55"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_9sdp"
                android:id="@+id/movement_date_in_movement_status"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"
                android:textSize="@dimen/_9sdp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:paddingStart="@dimen/_2sdp"
                android:paddingEnd="@dimen/_2sdp"
                android:text=""/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/_2sdp"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Movement Type : "
                android:fontFamily="@font/poppins_semibold"
                android:textSize="@dimen/_9sdp"
                android:layout_gravity="center"
                android:layout_weight=".45"
                android:textColor="@color/elite_red"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".55"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_9sdp"
                android:id="@+id/movement_type_in_movement_status"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"
                android:textSize="@dimen/_9sdp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:paddingStart="@dimen/_2sdp"
                android:paddingEnd="@dimen/_2sdp"
                android:text=""/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/_2sdp"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Movement Purpose : "
                android:fontFamily="@font/poppins_semibold"
                android:textSize="@dimen/_9sdp"
                android:layout_gravity="center"
                android:layout_weight=".45"
                android:textColor="@color/elite_red"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".55"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_9sdp"
                android:id="@+id/movement_purpose_in_movement_status"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"
                android:textSize="@dimen/_9sdp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:paddingStart="@dimen/_2sdp"
                android:paddingEnd="@dimen/_2sdp"
                android:text=""/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/movement_vehicle_m_s_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/_2sdp"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Movement Vehicle : "
                android:fontFamily="@font/poppins_semibold"
                android:textSize="@dimen/_9sdp"
                android:layout_gravity="center"
                android:layout_weight=".45"
                android:textColor="@color/elite_red"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".55"
                android:layout_marginEnd="@dimen/_9sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:id="@+id/movement_vehicle_in_movement_status"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"
                android:textSize="@dimen/_9sdp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:paddingStart="@dimen/_2sdp"
                android:paddingEnd="@dimen/_2sdp"
                android:text=""/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/movement_driver_m_s_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/_2sdp"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Driver Name : "
                android:fontFamily="@font/poppins_semibold"
                android:textSize="@dimen/_9sdp"
                android:layout_gravity="center"
                android:layout_weight=".45"
                android:textColor="@color/elite_red"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".55"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_9sdp"
                android:id="@+id/movement_driver_in_movement_status"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"
                android:textSize="@dimen/_9sdp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:paddingStart="@dimen/_2sdp"
                android:paddingEnd="@dimen/_2sdp"
                android:text=""/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/movement_client_m_s_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/_2sdp"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Client Name : "
                android:fontFamily="@font/poppins_semibold"
                android:textSize="@dimen/_9sdp"
                android:layout_gravity="center"
                android:layout_weight=".45"
                android:textColor="@color/elite_red"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".55"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_9sdp"
                android:id="@+id/movement_client_in_movement_status"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"
                android:textSize="@dimen/_9sdp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:paddingStart="@dimen/_2sdp"
                android:paddingEnd="@dimen/_2sdp"
                android:text=""/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/movement_for_req_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/_2sdp"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="For Requisition : "
                android:fontFamily="@font/poppins_semibold"
                android:textSize="@dimen/_9sdp"
                android:layout_gravity="center"
                android:layout_weight=".45"
                android:textColor="@color/elite_red"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".55"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_9sdp"
                android:id="@+id/movement_for_req_in_movement_status"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"
                android:textSize="@dimen/_9sdp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:paddingStart="@dimen/_2sdp"
                android:paddingEnd="@dimen/_2sdp"
                android:text=""/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>